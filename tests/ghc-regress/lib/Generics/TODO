-- Find an immediate subterm of type y given a subterm of type x
findOne :: (Data x, Data y) => x -> Maybe y
findOne =   singleton
          . foldl unJust [] 
          . gmapQ (Nothing `mkQ` Just)
 where
  unJust l (Just x) = x:l
  unJust l Nothing  = l
  singleton [s] = Just s
  singleton _   = Nothing
